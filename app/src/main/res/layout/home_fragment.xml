<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".home_fragment">

    <SearchView
        android:id="@+id/searchView"
        android:layout_width="335dp"
        android:layout_height="48dp"
        android:layout_marginTop="68dp"
        android:background="@drawable/edit_text"

        android:iconifiedByDefault="false"
        android:queryHint="Искать описания"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchView">

        <TextView
            android:layout_width="335dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:fontFamily="@font/sf_pro_display_medium"
            android:text="Акции и новости"
            android:textColor="@color/Caption"
            android:textSize="17sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/BannerRecycler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout11">

        <TextView
            android:layout_width="335dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:fontFamily="@font/sf_pro_display_medium"
            android:text="Каталог описаний"
            android:textColor="@color/Caption"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/but_cat"
                android:stateListAnimator="@null"
                android:text="Все"
                android:paddingHorizontal="20dp"
                android:paddingVertical="14dp"
                android:textAllCaps="false"
                android:fontFamily="@font/sf_pro_display_medium"
                android:textColor="@color/Description"
                android:textSize="15sp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Женщинам"
                android:textAllCaps="false"
                android:layout_marginStart="16dp"
                android:background="@drawable/but_cat"
                android:textColor="@color/Description"
                android:textSize="15sp"
                android:paddingVertical="14dp"
                android:paddingHorizontal="20dp"
                android:stateListAnimator="@null"
                android:fontFamily="@font/sf_pro_display_medium"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Мужчинам"
                android:fontFamily="@font/sf_pro_display_medium"
                android:stateListAnimator="@null"
                android:textAllCaps="false"
                android:background="@drawable/but_cat"
                android:textColor="@color/Description"
                android:textSize="15sp"
                android:layout_marginStart="16dp"
                android:paddingVertical="14dp"
                android:paddingHorizontal="20dp"/>

        </LinearLayout>


    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"

        app:layout_constraintTop_toBottomOf="@+id/linearLayout12" />

</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>