<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="76dp"
        android:fontFamily="@font/sf_pro_display_medium"
        android:text="Создание Профиля"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:fontFamily="@font/sf_pro_display_medium"
        android:text="Без профиля вы не сможете создавать проекты."
        android:textColor="@color/Caption"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="335dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/sf_pro_display_medium"
        android:text="В профиле будут храниться результаты проектов и ваши описания."
        android:textColor="@color/Caption"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5">

        <EditText
            android:id="@+id/name"
            android:layout_width="335dp"
            android:layout_height="48dp"
            android:background="@drawable/edit_text"
            android:fontFamily="@font/sf_pro_display_medium"
            android:hint="Имя"
            android:padding="14dp"
            android:textColor="@color/black"
            android:textColorHint="@color/Caption"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/surname"
            android:layout_width="335dp"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/edit_text"
            android:fontFamily="@font/sf_pro_display_medium"
            android:hint="Отчество"
            android:padding="14dp"
            android:textColor="@color/black"
            android:textColorHint="@color/Caption"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/lastname"
            android:layout_width="335dp"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/edit_text"
            android:fontFamily="@font/sf_pro_display_medium"
            android:hint="Фамилия"
            android:padding="14dp"
            android:textColor="@color/black"
            android:textColorHint="@color/Caption"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/date"
            android:layout_width="335dp"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/edit_text"
            android:fontFamily="@font/sf_pro_display_medium"
            android:hint="Дата рождения"
            android:padding="14dp"
            android:textColor="@color/black"
            android:textColorHint="@color/Caption"
            android:textSize="15dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="24dp"
            android:layout_width="335dp"
            android:layout_height="48dp"
            app:endIconMode="dropdown_menu"
            app:boxStrokeWidth="0dp"
            android:textColorHint="@color/Caption">

        <com.google.android.material.textfield.MaterialAutoCompleteTextView
            android:id="@+id/sex"
            android:layout_width="335dp"
            android:layout_height="48dp"

            android:background="@drawable/edit_text"
            android:fontFamily="@font/sf_pro_display_medium"
            android:hint="Пол"
            android:focusable="false"
            android:inputType="text"
            android:padding="14dp"
            android:textColor="@color/black"
            android:textColorHint="@color/Caption"
            android:textSize="15dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <EditText
            android:id="@+id/email"
            android:layout_width="335dp"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/edit_text"
            android:fontFamily="@font/sf_pro_display_medium"
            android:hint="Почта"
            android:inputType="textEmailAddress"
            android:padding="14dp"
            android:textColor="@color/black"
            android:textColorHint="@color/Caption"
            android:textSize="15dp" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/dalee"
        android:layout_width="335dp"
        android:layout_height="56dp"
        android:background="@drawable/blue_button"
        android:layout_marginTop="68dp"
        android:text="Далее"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:fontFamily="@font/sf_pro_display_medium"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5" />





</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>